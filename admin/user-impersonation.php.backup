    $activeImpersonation = $_SESSION['impersonated_user'];
}

if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $action = $_POST['action'] ?? '';
    
    switch($action) {
        case 'start_impersonation':
            $impersonationResult = startUserImpersonation($_POST);
            break;
        case 'switch_journey':
